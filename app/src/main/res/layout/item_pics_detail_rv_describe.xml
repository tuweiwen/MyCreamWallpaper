<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:id="@+id/title_item_pics_detail_rc_describe"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="this is title"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/content_item_pics_detail_rc_describe"
        app:layout_constraintTop_toBottomOf="@id/title_item_pics_detail_rc_describe"
        android:layout_marginTop="5dp"
        tools:text="this is content, it's very looooooooooooooooooooooooooog"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/count_item_pics_detail_rc_describe"
        app:layout_constraintTop_toBottomOf="@id/content_item_pics_detail_rc_describe"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="favourite count: 100"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/source_item_pics_detail_rc_describe"
        app:layout_constraintTop_toBottomOf="@id/content_item_pics_detail_rc_describe"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="source >"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>