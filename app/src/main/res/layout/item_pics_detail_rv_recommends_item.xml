<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="3dp">

    <ImageView
        android:id="@+id/image_pics_detail_rv_recommend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,1:1" />

    <TextView
        android:id="@+id/title_pics_detail_rv_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/image_pics_detail_rv_recommend"
        tools:text="this is title"/>

    <ImageView
        android:id="@+id/fav_icon_pics_detail_rv_recommend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/title_pics_detail_rv_recommend"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/fav_count_pics_detail_rv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100+"
        app:layout_constraintTop_toBottomOf="@id/title_pics_detail_rv_recommend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fav_icon_pics_detail_rv_recommend" />
</androidx.constraintlayout.widget.ConstraintLayout>