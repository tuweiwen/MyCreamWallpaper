<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_home_rv_cate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:layout_constraintDimensionRatio="h,3:1">
    <ImageView
        android:id="@+id/cate_pic_home_rv_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="3dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cate_name_home_rv_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/widget" />

    <TextView
        android:id="@+id/cate_name_home_rv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cate_pic_home_rv_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="category" />
</androidx.constraintlayout.widget.ConstraintLayout>