<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:background="@color/gray">

    <android.widget.Button
        android:layout_margin="10dp"
        android:id="@+id/download_all_dialog_detail_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dialog_fragment"
        android:text="@string/download_all"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/report_dialog_detail_more"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report"
        android:background="@drawable/btn_dialog_fragment"
        app:layout_constraintTop_toBottomOf="@id/download_all_dialog_detail_more" />

    <android.widget.Button
        android:layout_margin="10dp"
        android:background="@drawable/btn_dialog_fragment"
        android:id="@+id/cancel_dialog_detail_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        app:layout_constraintTop_toBottomOf="@id/report_dialog_detail_more" />
</androidx.constraintlayout.widget.ConstraintLayout>