<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/wallpaper_home_rv_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/purple_200"
        tools:layout_height="500dp" />
    <TextView
        android:id="@+id/wallpaper_home_rv_item_content"
        app:layout_constraintTop_toBottomOf="@id/wallpaper_home_rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="this is wallpaper content. it's very very loooooooooooog." />
</androidx.constraintlayout.widget.ConstraintLayout>