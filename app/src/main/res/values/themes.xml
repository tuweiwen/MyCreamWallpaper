<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCreamWallpaper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_400</item>
        <item name="colorPrimaryVariant">@color/yellow_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <!--NavigationIcon的宽度-->
        <item name="toolbarStyle">@style/BaseToolbarStyle</item>
        <!--去除系统Title-->
        <item name="windowNoTitle">true</item>
        <!--产生透明遮罩(半透明)-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--状态栏为白底时显示黑色字体-->
        <item name="android:windowLightStatusBar">true</item>
        <!--让view适配window，使view仅渲染在中间位置-->
        <item name="android:fitsSystemWindows">true</item>
        <!--是否绘制systemBar的背景-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- 虚拟按键透明 -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--标题栏的样式-->
    <style name="BaseToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!--内容距离开始 边距-->
        <item name="contentInsetStart">8dp</item>
        <!--内容距离 导航按钮 边距-->
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--使自定义view可以贴左右的边，多数版本的系统不要下面两句也可以，但少量版本必须加下面的两句-->
        <item name="android:paddingLeft">8dp</item>
        <!--右内边距-->
        <item name="android:paddingRight">0dp</item>
        <!--最小高度-->
        <item name="android:minHeight">?actionBarSize</item>
        <!--高度-->
        <item name="android:layout_height">?actionBarSize</item>
        <!--宽度-->
        <item name="android:layout_width">match_parent</item>
        <item name="actionMenuTextColor">#000</item>
    </style>

    <style name="DialogMore">
        <!--透明背景可使用 @android:color/transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@android:color/transparent</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabLayoutTextSize">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolbarRipple" parent="Theme.MyCreamWallpaper">
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>
</resources>